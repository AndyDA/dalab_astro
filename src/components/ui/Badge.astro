---
export interface Props {
  variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'danger' | 'info';
  size?: 'xs' | 'sm' | 'md' | 'lg';
  class?: string;
}

const { variant = 'primary', size = 'xs', class: className = '' } = Astro.props;

const variantClasses = {
  primary: 'badge-primary',
  secondary: 'bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300',
  success: 'bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300',
  warning: 'bg-yellow-100 text-yellow-700 dark:bg-yellow-900 dark:text-yellow-300',
  danger: 'bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300',
  info: 'bg-blue-100 text-blue-700 dark:bg-blue-900 dark:text-blue-300',
};

const sizeClasses = {
  xs: 'px-2 py-1 text-xs',
  sm: 'px-2.5 py-1.5 text-sm',
  md: 'px-3 py-2 text-base',
  lg: 'px-4 py-2.5 text-lg',
};

const classes = `inline-block rounded font-medium ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<span class={classes}>
  <slot />
</span>

<style>
  .badge-primary {
    background-color: color-mix(in srgb, var(--aw-color-bg-page), white 10%);
    border-radius: 500em;
    padding: 6px 12px;
    pointer-events: none;
  }
</style>
